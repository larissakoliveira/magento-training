<?xml version="1.0"?>

<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.svg</argument>
                <argument name="logo_height" xsi:type="string">56</argument>
                <argument name="logo_width" xsi:type="string">100</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="footer-bottom-content">
            <block class="Magento\Framework\View\Element\Template" name="report.bugs.bottom" template="Magento_Theme::html/bugreport.phtml"/>
        </referenceContainer>
    </body>
</page>